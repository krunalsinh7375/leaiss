<div class="">
  <% unless flash[:notice].nil? %> <div class='alert'><%= flash[:notice] %></div><% end %>
  <% unless flash[:error].nil? %> <div class='alert alert-error'><%= flash[:error] %></div><% end %>
  <fieldset>
    <legend>Search SDR Detail</legend>
    <%= form_tag('/sdrs/fetch_sdr') do -%>
      <div class="field">
        <%#= text_field_tag :mobile_number %>
        <%= autocomplete_field_tag :mobile_number, '', autocomplete_sdr_mobile_number_sdrs_path, :size => 35, :placeholder => "Enter Mobile Number" %>
      </div>

      <div><%= submit_tag 'Search', class: 'btn' %></div>
    <% end -%>
  </fieldset>
</div>