<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <% if controller.controller_name.eql?('sessions') && controller.action_name.eql?('new') %>
        <%= link_to "Law Enforcement Agency Informatics Solutions", '#', id: "logo" %>
      <% else %>
        <%= link_to "Leais", '#', id: "logo" %>
      <% end %>
      <nav>
        <% if current_user %>
          <ul class="nav pull-left">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sdr search <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'SDR Search', new_sdr_path %></li>
                <li><%= link_to 'Multiple SDR Search', multiple_sdr_search_sdrs_path %></li>
              </ul>
            </li>
            <li><%= link_to "Rto search", new_rto_path %></li>
            <li><%= link_to "Tower search", new_cell_tower_path %></li>
            <li><%= link_to "Profile", edit_user_path(current_user) %></li>
            <% if current_user.admin %>
              <li><%= link_to "Activity log", activities_path %></li>
              <li><%= link_to 'New user', new_user_path %></li>
            <% end %>
          </ul>
          <ul class="nav pull-right">
            <li><%= link_to "Log out", log_out_path %></li>
          </ul>
        <% else %>
          <ul class="nav pull-right">
            <li><%= link_to "Log in", log_in_path %></li>
          </ul>
        <% end %>
      </nav>
    </div>
  </div>
</header>