<div class="">
  <h3>Existing CDR</h3>

  <div class='pull-right'><%= link_to 'Analyse new cdr', new_cdr_path, :class => 'btn btn-info' %></div>
  <br />
  <br />
  
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Mobile no</th>
      <th>Name</th>
      <th>Case no</th>
      <th>Uploaded Date</th>
      <th></th>
    </tr>

  <% @cdrs.each do |cdr| %>
    <% sdr = Sdr.find_by_mobile_number(cdr.mobile_no) %>
    <tr>
      <td><%= cdr.mobile_no %></td>
      <td><%= sdr.name %></td>
      <td><%= cdr.case_no %></td>
      <td><%= cdr.created_at.strftime("%b %d %I:%M %p")  %></td>
      <td><%= link_to 'Show', cdr %> | <%= link_to "Show map", show_map_cdrs_path(:id => cdr) %></td>
    </tr>
  <% end %>
  </table>
</div>






