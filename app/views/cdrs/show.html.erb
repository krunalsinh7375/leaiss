<% unless flash[:notice].nil? %> <div class='alert'><%= flash[:notice] %></div><% end %>

<div class="">
  <div class='right_alignment'><%= link_to image_tag("pdf_icon.png") + ' PDF Report', cdr_path(@cdr, format: "pdf"), :target => "_blank" %> </div>
  <p id="notice"><%= notice %></p>

  <p>
    <b>Mobile no:</b>
    <%= @cdr.mobile_no %>
  </p>

  <p>
    <b>Name:</b>
    <%= @sdr.name %>
  </p>
  
  <p>
    <b>Address:</b>
    <%= @sdr.address %>
  </p>
  
  <p>
    <b>Report Generated By:</b>
    <%= current_user.name.upcase %>
  </p>

  <p>
    <b>Police station:</b>
    <%= "#{current_user.branch.upcase}, #{current_user.city.upcase}" %>
  </p>
  
  <p>
    <b>C.R. Number:</b>
    <%= @cdr.case_no.upcase %>
  </p>
  
  <p>
    <b>Report Generated Date:</b>
    <%= @cdr.created_at.strftime("%b %d %I:%M %p") %>
  </p>
  
  <br/>
  <%= link_to 'Back', cdrs_path, :class => 'btn btn-info btn-mini' %>

  <h3>Frequency Reports</h3>
  <ul class="breadcrumb">
    <li class="call_out"><a href="#">Call OUt</a> <span class="divider">/</span></li>
    <li class="call_in"><a href="#">Call In</a> <span class="divider">/</span></li>
    <li class="sms_out"><a href="#">SMS OUT</a> <span class="divider">/</span></li>
    <li class="sms_in"><a href="#">SMS In</a> <span class="divider">/</span></li>
    <li class="call_forward"><a href="#">Forwarded Calls</a> <span class="divider">/</span></li>
    <li class="cell_count"><a href="#">Cell Tower</a></li>
    <!-- <li class="active">Data</li> -->
  </ul>

  <div class="mobile_out">
    <%= render "out_going_call_frequency" %>
  </div>

  <div class="mobile_in" style="display:none;">
    <%= render "in_coming_call_frequency" %>
  </div>

  <div class="mobile_sms_out" style="display:none;">
    <%= render 'out_going_sms_frequency' %>
  </div>

  <div class="mobile_sms_in" style="display:none;">
    <%= render "in_coming_sms_frequency" %>
  </div>

  <div class="all_cell_fre" style="display:none;">
    <%= render 'cell_tower_frequency' %>
  </div>

  <div class="call_forward_detail" style="display:none;">
    <%= render 'call_forward_frequency' %>
  </div>
</div>