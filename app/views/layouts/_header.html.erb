<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <% if (controller.controller_name.eql?('sessions') && controller.action_name.eql?('new') || controller.controller_name.eql?('homes') && controller.action_name.eql?('index')) %>
        <%= link_to "Gujarat Forensic Sciences University", '#', id: "logo" %>
      <% else %>
        <%= link_to "Leais", new_sdr_path, id: "logo" %>
      <% end %>
      <nav>
        <% if current_user %>
          <ul class="nav pull-left">
            <li class="dropdown <%= get_active_class('sdrs') %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">SDR/SP Search <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'SDR Search', new_sdr_path %></li>
                <li><%= link_to 'Multiple SDR Search', multiple_sdr_search_sdrs_path %></li>
                <li><%= link_to 'Service Provider Search', new_msc_path %></li>
              </ul>
            </li>
            <li class="<%= get_active_class("cdrs") %>"><%= link_to "CDR Analysis", cdrs_path %></li>
            <li class="<%= get_active_class("cell_towers") %>"><%= link_to "Tower search", new_cell_tower_path %></li>
            <li class="<%= get_active_class("rtos") %>"><%= link_to "Vehicle search", new_rto_path %></li>
            <li class="<%= get_active_class("ipdrs") %>"><%= link_to "IP/Domain lookup", new_ipdr_path %></li>
            
            <li class="dropdown <%= get_active_class('users') %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", edit_user_path(current_user) %></li>
                <% if current_user.admin %>
                  <li><%= link_to 'New user', new_user_path %></li>
                <% end %>
              </ul>
            </li>
            
            <% if current_user.admin %>
              <li class="<%= get_active_class("activities") %>"><%= link_to "Activity log", activities_path %></li>
            <% end %>
          </ul>
          <ul class="nav pull-right">
            <li><%= link_to "Log out", log_out_path %></li>
          </ul>
        <% else %>
          <ul class="nav pull-right">
            <li><%= link_to "Log in", log_in_path %></li>
          </ul>
        <% end %>
      </nav>
    </div>
  </div>
</header>