<div class="well">
  <div class='right_alignment'><%= image_tag("xls_icon.gif") %> Xls Export | <%= image_tag("printer.gif") %> printer</div>
  
  <legend>Users</legend>
  
  <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>phone</th>
          <th>City</th>
          <th>Activity</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.city %></td>
            <td><%= link_to 'Activities', activity_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>